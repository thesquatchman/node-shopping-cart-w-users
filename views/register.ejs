<% include header %>

<% if(!user) {%>
<form action="/register" method="post" class="form-horizontal">
    
    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10"><input required type="email" name="email" class="form-control" id="email" placeholder="E-mail"></div>
    </div>

    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10"><input required type="password" name="password" class="form-control" id="password" placeholder="Password"></div>
    </div>
    
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Display Name</label>
        <div class="col-sm-10"><input type="text" name="displayName" class="form-control" id="name"></div>
    </div>
    
    <div class="row">
        <div class="col-md-10 col-md-offset-2">

            <div class="pull-right">
                <input type="submit" value="Create Account" class="btn btn-primary btn-lg">
            </div>
            
        </div>
        <input type="hidden" name="nonce" value="<%= nonce%>">
    </div>
</form>
<% } else { %>
<p class="alert alert-info">Welcome</p>
<% } %>


<% include footer %>